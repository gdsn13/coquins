	<link rel="icon" type="type/png" href="images/favicon.ico" />
	<script src="/javascripts/jquery-1.7.2.min.js" type="text/javascript"></script>
	<script src="/javascripts/corMVC.js" type="text/javascript"></script>
	<script src="/javascripts/model.js" type="text/javascript"></script>
	<script src="/javascripts/jquery.imagesloaded.min.js" type="text/javascript"></script>
	<script src="/javascripts/jquery.masonry.min.js" type="text/javascript"></script>
	<script src="/javascripts/loco_service.js" type="text/javascript"></script>
	<script src="/javascripts/menu_view.js" type="text/javascript"></script>
	<script src="/javascripts/intro_view.js" type="text/javascript"></script>
	<script src="/javascripts/home_view.js" type="text/javascript"></script>
	<script src="/javascripts/spectacles_view.js" type="text/javascript"></script>
	<script src="/javascripts/spectacles_nav_view.js" type="text/javascript"></script>
	<script src="/javascripts/spectacle_view.js" type="text/javascript"></script>
	<script src="/javascripts/page_view.js" type="text/javascript"></script>
	<script src="/javascripts/content.js" type="text/javascript"></script>
	<script src="/javascripts/localize.js" type="text/javascript"></script>
	<script src="/javascripts/fr.js" type="text/javascript"></script>
	<script src="/javascripts/en.js" type="text/javascript"></script>
	<script src="/javascripts/growl_view.js" type="text/javascript"></script>
	
	<!-- Add mousewheel plugin (this is optional) -->
	<script type="text/javascript" src="/javascripts/fancybox/lib/jquery.mousewheel-3.0.6.pack.js"></script>

	<!-- Add fancyBox -->
	<link rel="stylesheet" href="/javascripts/fancybox/source/jquery.fancybox.css?v=2.0.6" type="text/css" media="screen" />
	<script type="text/javascript" src="/javascripts/fancybox/source/jquery.fancybox.pack.js?v=2.0.6"></script>

	<!-- Optionally add helpers - button, thumbnail and/or media -->
	<link rel="stylesheet" href="/javascripts/fancybox/source/helpers/jquery.fancybox-thumbs.css?v=2.0.6" type="text/css" media="screen" />
	<script type="text/javascript" src="/javascripts/fancybox/source/helpers/jquery.fancybox-thumbs.js?v=2.0.6"></script>
	
	<script type="text/javascript">
		var spectacles_list = [
		<% @spectacles.map do |spec| %> 
  		{ "id": "<%= spec.id %>",
		  "slug": "<%= spec._slug %>",
		  "titre": "<%= spec.titre %>",
		  "date": "<%= spec.date %>",
		  "en_tournee": "<%= spec.en_tournee %>",
		  "saison": "<%= spec.season_id %>",
		  "logo": "<%= spec.logo.url %>"
	  	} <%= "," unless spec == @spectacles.last -%>
		<% end -%>
		];
		
	</script>
</head>

<body>
	
	<div id="growl_messages"></div>
	
	<div id="logo_menu">
		<div id="logo">
			<img src="theme/images/logo.png">
		</div>
		<div id="menu_title">Menu</div>
		<!--a href="javascript:void(0)" id="close_menu"><img src="/theme/images/close_plus.png" width="15px"></a-->
	</div>
	
	<%= get_generated_menu.html_safe%>
	
	<div id="intro">
		<div id="main_pic_intro">
			<div id="dotted_intro"></div>
			<div id="texte_intro"></div>
			<div id="image_intro"></div>
		</div>
		<ul id="nav_intro">
			
		</ul>
	</div>
	
	<div id="home">
		<div id="home_jules"></div>
		<div id="home_container">
			<div id="home_news">
				<script id="home_actus_template" type="application/template">
					<div class="home_actus">
						<div class="home_actus_image"><img src="${picto}"/></div>
						<div class="home_actus_body">${block}</div>
					</div>
				</script>
			</div>
			<div id="home_boutons">
				<script id="boutons_actus_template" type="application/template">
					<div class="home_boutons">
						<div class="home_boutons_image"><img src="${img}"/></div>
						<div class="home_boutons_body">${block}</div>
					</div>
				</script>
			</div>
		</div>
	</div>
	
	<div id="pages">
		<div id="jules_list">
			
		</div>
		<div id="contents">
			
		</div>
		<div id="bck_img"></div>
	</div>
	
	<div id="spectacles_container">
		<div id="jules_sliders">
			
		</div>
		<div id="slide_left_btn"><a href="javascript:void(0)" class="slide_link"></a></div>
		<div id="slide_right_btn"><a href="javascript:void(0)" class="slide_link"></a></div>
		<div id="slider_nav"></div>
	</div>
	
	<div id="spectacle_slider">
		<ul>
			
		</ul>
		<div id="spectacles_titles">
		</div>
		<script id="spectacle_list_template" type="application/template">
			<li>
				<a href="#/spectacle/${slug}" rel="${index}" class="spectacle_thumb"><img src="${logo}" height="170"/></a>			
			</li>
		</script>
	</div>
	
	<div id="buttons_containers">
		
	</div>
	
	<div id="spectacle_container">
	</div>	
	<script id="image_galery_for_spectacle" type="application/template">
		<div class="image" id="image_${index}"><img src="${image}" alt="" /></div>
	</script>
	<script id="spectacle_template" type="application/template">
		<%= render "front/layouts/spectacle_view" %>
	</script>
	
</body>
</html>