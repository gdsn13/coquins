- title @bouton.title

- content_for :head do
  = include_javascripts :pages

- content_for :submenu do
  = render 'admin/shared/menu/pages'

- if can? :create, Page
  - content_for :boutons do
    = admin_button_tag :new, new_admin_bouton_url, :class => 'new', :id => 'newpage'
    
%p!= t('.help')

- if @bouton
  .preview
    #bouton_preview
      %h4 Image associÃ©e au bouton
      %img{ :src => @bouton.le_bouton.thumb.url}
    - if @bouton.son.url != ""
      #bouton_sound_preview
        %h4 Son associÃ© au bouton
        %object{ :type => "application/x-shockwave-flash", :data => "/player/dewplayer-mini.swf", :width => "200", :height => "20"}
          %param{ :name => "movie", :value => "dewplayer-mini.swf" }
          %param{ :name => "flashvars", :value => "mp3=#{@bouton.son.url}" }
          %param{ :name => "wmode", :value => "transparent" }

= semantic_form_for @bouton, :url => admin_bouton_url(@bouton), :html => { :class => 'save-with-shortcut', :multipart => true } do |form|

  = render 'form', :f => form

  = render 'admin/shared/form_actions', :back_url => admin_boutons_url, :button_label => :update