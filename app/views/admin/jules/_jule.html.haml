%li
  %em
  %strong= link_to truncate(jule.name, :length => 80), edit_admin_jule_url(jule)

  .more
    %span!= t('.updated_at')
    = l jule.updated_at, :format => :short

    = link_to image_tag('admin/list/icons/trash.png'), admin_jule_url(jule), :class => 'remove', :confirm => t('admin.messages.confirm'), :method => :delete