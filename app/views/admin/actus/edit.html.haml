- title @actu.title

- content_for :head do
  = include_javascripts :pages

- content_for :submenu do
  = render 'admin/shared/menu/pages'

- if can? :create, Page
  - content_for :buttons do
    = admin_button_tag :new, new_admin_actu_url, :class => 'new', :id => 'newpage'
    
%p!= t('.help')

= semantic_form_for @actu, :url => admin_actu_url(@actu), :html => { :class => 'save-with-shortcut', :multipart => true } do |form|

  = render 'form', :f => form

  = render 'admin/shared/form_actions', :back_url => admin_actus_url, :button_label => :update