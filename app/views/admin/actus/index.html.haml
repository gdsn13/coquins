- title t('.title')

- content_for :head do
  = include_javascripts :pages

- content_for :submenu do
  = render 'admin/shared/menu/pages'

- if can? :create, Page
  - content_for :buttons do
    = admin_button_tag :new, new_admin_actu_url, :class => 'new', :id => 'newpage'
    
%p!= t('.help')

- if @actus.empty?
  %p.no-items!= t('.no_items', :url => new_admin_actu_url)
- else
  %ul#pages-list
    = render @actus
